= link_to 'Adicionar compromisso', [:new, :appointment]

%ul
  - 24.times do |hour|
    %li
      %dl
        %dt Hora
        %dd= hour

      %ul
        - @appointments.each do |appointment|
          - next unless appointment.begin_at.hour == hour

          %li
            %dl
              %dt Nome
              %dd= appointment.name
              %dt Hor√°rio
              %dd= appointment.begin_at
%ul
  - @week.each do |date, total|
    %li
      = link_to day_path(date.year, date.month, date.day) do
        %div.date= date
        %div.total= total
