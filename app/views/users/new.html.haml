%div.container
  %div.col-md-4.col-md-offset-4
    - if @user.errors.any?
      %div.panel.panel-danger
        %div.panel-heading
          %div.panel-title
            Usuário não pode ser criado
        %div.panel-body
          %ul
            - @user.errors.full_messages.each do |message|
              %li= message

    = form_for @user, url: signup_path, html: { class: 'form-horizontal' } do |form|
      %fieldset.form-group
        = form.label :name
        = form.text_field :name,
          class: 'form-control input-lg',
          placeholder: 'Nome utilizado comercialmente'

      %fieldset.form-group
        = form.label :email
        = form.email_field :email,
          class: 'form-control input-lg',
          placeholder: 'E-mail utilizado para login'

      %fieldset.form-group
        = form.label :password
        = form.password_field :password,
          class: 'form-control input-lg',
          placeholder: 'Senha utilizada para login'

      %fieldset.form-group
        = form.label :business
        = form.select :business, business_choices,
          { prompt: 'Escolha um ramo' },
          { class: 'form-control input-lg' }

      %fieldset.form-group
        = form.submit 'Cadastrar-se', class: 'btn btn-primary btn-block btn-lg'

      %fieldset.form-group
        -#
          = link_to 'Esqueci minha senha', '#', class: 'btn btn-default btn-block'
        = link_to 'Já tenho uma conta', login_path, class: 'btn btn-default btn-block btn-lg'
