%fieldset.form-group
  = form.label :name
  = form.text_field :name, class: 'form-control input-lg'

%fieldset.form-group
  = form.label :email
  = form.email_field :email, class: 'form-control input-lg'

%fieldset.form-group
  = form.label :password
  = form.password_field :password, class: 'form-control input-lg'

%fieldset.form-group
  = form.label :business
  = form.select :business, %w[medical dental aesthetic], {}, class: 'form-control input-lg'
