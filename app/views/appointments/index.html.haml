%div.container
  %div.col-md-3
    %div.row.form-group
      %a.btn.btn-primary.btn-lg.btn-block(href=new_appointment_path)
        %i.glyphicon.glyphicon-plus
        %span Adicionar compromisso

    %div.well.row
      %input#calendar(type='hidden')

  %div.col-md-9
    - if flash.notice
      %div.alert.alert-success(role='alert')
        %span.glyphicon.glyphicon-saved(aria-hidden='true')
        = flash.notice

    %table.table.table-hover
      %thead
        %tr
          %th Horário
          %th Nome
          %th Número
          %th
      %tbody
        - @appointments.each do |appointment|
          %tr
            %td= l(appointment.begin_at, format: '%H:%M')
            %td= appointment.name
            %td= "#{appointment.area}-#{appointment.phone}"
            %td= link_to 'Alterar', [:edit, appointment],
              class: %w[btn btn-default btn-xs]

:coffee
  hermes.appointments("#{l(time, format: '%Y/%m/%d')}")
