= form_for @appointment do |f|
  = f.hidden_field :begin_at

  - if @appointment.errors.any?
    %div.row.well
      %div.col-md-6
        #error_explanation
          %ul
            - @appointment.errors.full_messages.each do |msg|
              %li= msg

  %div.row
    %div.col-md-5
      #calendar
  %div.form-group.form-group-lg
    %div.col-md-5
      = f.label :name
      = f.text_field :name, class: 'form-control'
  %div.form-group.form-group-lg
    %div.col-md-1
      = f.label :area
      = f.text_field :area, class: 'form-control'
    %div.col-md-2
      = f.label :phone
      = f.text_field :phone, class: 'form-control'

  %div.form-group.col-md-5
    %a.btn.btn-lg.btn-default(href=calendar_path) Cancelar
    %button.btn.btn-lg.btn-primary Salvar

:coffee
  do hermes.appointment
