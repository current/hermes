!!!
%html
  %head
    %meta(charset="utf-8")
    %title Hermes
    = stylesheet_link_tag 'application', 'data-turbolinks-track' => true, 'media' => 'all'
    = javascript_include_tag 'application', 'data-turbolinks-track' => true
    = csrf_meta_tags

  %body
    %div.navbar.navbar-default.navbar-static-top
      %div.container
        %a.navbar-brand(href=today_path) Hermes

        %p.nav.navbar-text.navbar-left= current_user.name

        %ul.nav.navbar-nav.navbar-right
          %li= link_to 'Configurações', settings_path
          %li= link_to 'Sair', logout_path

    = yield
