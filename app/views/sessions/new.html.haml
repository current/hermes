%div.container
  %div.col-md-4.col-md-offset-4
    %div.row
      - if flash.alert
        = flash.alert
    %div.row
      = form_tag :login, class: 'form-horizontal' do
        %fieldset.form-group
          = label_tag :email
          %div.input-group
            %span.input-group-addon @
            = email_field_tag :email, params[:email], class: 'form-control'

        %fieldset.form-group
          = label_tag :password
          = password_field_tag :password, nil, class: 'form-control'

        %fieldset.form-group
          = submit_tag 'Login', class: 'btn btn-lg btn-primary btn-block'

    %div.row
      %ul.nav.nav-pills.nav-justified
        %li= link_to 'Esqueci minha senha', '#'
        %li= link_to 'Ainda n√£o tenho conta', signup_path
