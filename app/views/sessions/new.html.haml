%div.container
  %div.col-md-4.col-md-offset-4
    %div.row
      - if flash.alert
        = flash.alert
    %div.row
      = form_tag :login, class: 'form-horizontal' do
        %fieldset.form-group
          = label_tag :email
          %div.input-group
            %span.input-group-addon @
            = email_field_tag :email, params[:email], class: 'form-control'

        %fieldset.form-group
          = label_tag :password
          = password_field_tag :password, nil, class: 'form-control'

        %fieldset.form-group
          = submit_tag 'Login', class: 'btn btn-lg btn-primary btn-block'

        %fieldset.form-group
          -#
            = link_to 'Esqueci minha senha', '#', class: 'btn btn-default btn-block'
          = link_to 'NÃ£o tenho uma conta', signup_path, class: 'btn btn-default btn-block'
